{{/* layouts/_default/index.json */}}
{{- $index := slice -}}
{{- range where .Site.RegularPages.ByDate.Reverse "Section" "recettes" -}}
  {{ if .Params.dateCreated }}
      {{ $.Scratch.Set "date" (.Params.dateCreated) }}
  {{ else }}
      {{- if isset site.Params "date_format" -}}
        {{- $.Scratch.Set "date" (.Date.Format site.Params.date_format) -}}
      {{- else -}}
        {{- $.Scratch.Set "date" (.Date.Format "2006-01-02") -}}
      {{- end -}}
  {{ end }}
    {{- $index = $index | append (dict "title" ( .Title | plainify ) "permalink" .Permalink  "regime" .Params.regime "spécialité" .Params.spécialité "categories" .Params.categories "ingredients" .Params.ingredients "auteur" .Params.auteur ) -}}
{{- end -}}
{{- $index | jsonify -}}
